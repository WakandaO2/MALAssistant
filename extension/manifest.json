{
    "manifest_version": 2,
    "name": "MALAssistant",
    "description": "Add useful information to MyAnimeList.",
    "version": "1.50",
    "author": "Wakanda",
    "default_locale": "en",
  
    "options_page": "options.html",
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "MALAssistant"
    },
  
    "icons": {
        "16": "icons/16.png",
        "38": "icons/38.png",
        "48": "icons/48.png"
    },

    "content_scripts": [
        {
            "js": ["script/common/Constants.js", "script/MALScript.js"],
            "matches": ["https://myanimelist.net/people/*"]
        },
        {
            "js": ["script/common/Constants.js", "script/BetaScript.js"],
            "matches": ["https://myanimelist.net/animelist/*"]
        }
    ],
  
    "background": {
        "scripts": ["script/common/Constants.js", "script/common/Utils.js", "script/BackgroundPage.js"]
    },
  
    "web_accessible_resources": [
        "script/MALScript.js",
        "script/BetaScript.js"
    ],
  
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "https://myanimelist.net/*"
    ]
}