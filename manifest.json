{
    "manifest_version": 2,
    "name": "MALAssistant",
    "description": "Add useful information to MyAnimeList.",
    "version": "1.50",
    "author": "WakandaO2",
    "default_locale": "en",

    "icons": {
        "16": "icons/16.png",
        "38": "icons/38.png",
        "48": "icons/48.png"
    },
  
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },

    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_title": "MALAssistant"
    },

    "content_scripts": [
        {
            "js": ["common/constants.js", "content_scripts/MALScript.js"],
            "matches": ["https://myanimelist.net/people/*"]
        },
        {
            "js": ["common/constants.js", "content_scripts/betaScript.js"],
            "matches": ["https://myanimelist.net/animelist/*"]
        }
    ],
  
    "background": {
        "scripts": ["common/constants.js", "common/utils.js", "background/background.js"]
    },
  
    "web_accessible_resources": [
        "content_scripts/MALScript.js",
        "content_scripts/betaScript.js"
    ],
  
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "https://myanimelist.net/*"
    ]
}